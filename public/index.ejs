                <p id="searchBtn">Search!</p>

            </div>
        <div id="background"style="position: absolute;z-index: 640; top:10%; left: 35%;" >
                        
            </div>
        </div>

        <div id="create"style="display: none;" >
                <div id="selectors"style="position: absolute;z-index: 650; top:27.8%; left: 41.35%; ">
                    <div id="createOptions">
                    
                    <div id="tasteCrt">
                            <div class="slidecontainer">             
        
                            <p id="tasteTxtCrt">Taste :</p> <p id="tasteAmountCrt"></p> 
        
        
                                    <input type="range" min="0" max="5" value="0" class="slider" id="myRangeCrt">
                            </div>
        
                        </div>
                    </div>
                    <div id="temperatureCrt">
                            <p id="temperatureTxtCrt">Temperature:</p> <p id="temperatureAmountCrt">0</p>
        
        
