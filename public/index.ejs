	<body>
        <div id="map">

        </div>  

        <div id="tools">

              <div style="position: absolute;z-index: 650; top:5%; left: 97%;transform: scale(3); "  id="createMarker"><i class="fas fa-plus" ></i></div>
              <div style="position: absolute;z-index: 650; top:5%; left: 93.2%;transform: scale(2.5)"  id="reCenterIt"><i class="fas fa-location-arrow"></i></div>
              <div style="position: absolute;z-index: 650; top:5%; left: 89.5%;transform: scale(2.5)"id="search">    <i class="fas fa-search"></i></div>
            
        </div>
        <div id="search2"style="display: none;" >
        <div id="selectors"style="position: absolute;z-index: 650; top:27.8%; left: 41.35%; ">
            <div id="searchFilters">
            
            <div id="fiability">
                    <p id="fiabilityTxt">Fiability(at least) :</p> <p id="fiabilityAmount"></p>


                    <div class="slidecontainer">
                            <input type="range" min="1" max="100" value="1" class="slider" id="myRange">
                    </div>

                </div>
            <div id="taste">
                    <div class="slidecontainer">             

                    <p id="tasteTxt">Taste(at least) :</p> <p id="tasteAmount"></p> 


                            <input type="range" min="0" max="5" value="0" class="slider" id="myRange2">
                    </div>

                </div>
            </div>
            <div id="temperature">
                    <p id="temperatureTxt">Temperature:</p> <p id="temperatureAmount">0</p>


                    <div class="slidecontainer">
                            <input type="range" min="0" max="3" value="0" class="slider" id="myRange3">
                    </div>
                    <p id="temperatureNote">undefined temperatures and tastes will appears if you let the default values</p>

